<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root_activitychangepwd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.zidiv.photo.activity.ChangepwdActivity">

    <include layout="@layout/title" android:id="@+id/title"
        ></include>

    <EditText
        android:id="@+id/et_oldpwd_activitychangepwd"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_et_login"
        android:hint="输入旧密码"
        android:textSize="@dimen/sp13"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_newpwd_activitychangepwd"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/sp13"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_et_login"
        android:hint="输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <EditText
        android:id="@+id/et_confirmpwd_activitychangepwd"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/sp13"
        android:background="@drawable/shape_et_login"
        android:hint="确认密码"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_confirmchange_activitychangepwd"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:textSize="@dimen/sp13"
        android:background="@drawable/shape_btn_fragmenthome"
        android:text="确认修改"
        android:textColor="@color/white" />


</LinearLayout>
